<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Plano" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/amber</item>
    </style>

    <style name="Circle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="Widget.Plano.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle
        </item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="Widget.Plano.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>
</resources>